<p id="notice"><%= notice %></p>

<h1>Listing Lens</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Mount</th>
      <th>Flange focal distance</th>
      <th>Sensor size</th>
      <th>Region</th>
      <th>Float</th>
      <th>Work length</th>
      <th>Float</th>
      <th>Work lenght round</th>
      <th>Float</th>
      <th>Xiangyuan</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lens.each do |len| %>
      <tr>
        <td><%= len.name %></td>
        <td><%= len.mount %></td>
        <td><%= len.flange_focal_distance %></td>
        <td><%= len.sensor_size %></td>
        <td><%= len.region %></td>
        <td><%= len.float %></td>
        <td><%= len.work_length %></td>
        <td><%= len.float %></td>
        <td><%= len.work_lenght_round %></td>
        <td><%= len.float %></td>
        <td><%= len.xiangyuan %></td>
        <td><%= link_to 'Show', len %></td>
        <td><%= link_to 'Edit', edit_len_path(len) %></td>
        <td><%= link_to 'Destroy', len, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

